<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.cardview.widget.CardView
    android:id="@+id/typeSView"
    android:layout_width="180dp"
    android:layout_height="100dp"
    android:layout_marginEnd="@dimen/spacing_1x"
    android:layout_marginStart="@dimen/spacing_1x"
    app:cardCornerRadius="@dimen/spacing_1x">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
        android:id="@+id/typeSImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_trans50"/>

      <TextView
        android:id="@+id/typeSTitleView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:paddingEnd="@dimen/spacing_half"
        android:paddingStart="@dimen/spacing_half"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/white"/>

      <TextView
        android:id="@+id/typeSInfoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/typeSImageView"
        android:layout_alignParentTop="true"
        android:background="@drawable/rank_indicator"
        android:paddingEnd="@dimen/spacing_1x"
        android:paddingStart="@dimen/spacing_1x"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/white"/>
    </RelativeLayout>
  </androidx.cardview.widget.CardView>
</merge>
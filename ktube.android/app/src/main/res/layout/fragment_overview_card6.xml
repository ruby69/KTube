<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/spacing_1x">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/spacing_2x"
      android:layout_marginStart="@dimen/spacing_2x"
      android:layout_marginTop="@dimen/spacing_1x"
      android:orientation="vertical">

      <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_1x"/>

      <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_1x"
        android:tag="0"
        app:cardCornerRadius="@dimen/spacing_1x">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/empty"/>

          <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/image1"
            android:background="@color/black_trans50"/>

          <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/image1"
            android:gravity="center"
            android:maxLines="3"
            android:textColor="@color/white"/>

          <TextView
            android:id="@+id/info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/image1"
            android:background="@drawable/rank_indicator"
            android:gravity="center_horizontal"
            android:paddingEnd="@dimen/spacing_1x"
            android:paddingLeft="@dimen/spacing_1x"
            android:paddingRight="@dimen/spacing_1x"
            android:paddingStart="@dimen/spacing_1x"
            android:textColor="@color/white"/>
        </RelativeLayout>
      </androidx.cardview.widget.CardView>

      <LinearLayout
        android:id="@+id/layer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_half"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
          android:id="@+id/card2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/spacing_quarter"
          android:layout_weight="1"
          android:tag="1"
          app:cardCornerRadius="@dimen/spacing_half">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
              android:id="@+id/image2"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:contentDescription="@string/app_name"
              android:scaleType="fitXY"
              android:src="@drawable/empty"/>

            <View
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_alignBottom="@+id/image2"
              android:background="@color/black_trans50"/>

            <TextView
              android:id="@+id/title2"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_alignBottom="@+id/image2"
              android:ellipsize="end"
              android:gravity="center"
              android:maxLines="2"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              android:textColor="@color/white"/>

            <TextView
              android:id="@+id/info2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignTop="@+id/image2"
              android:background="@drawable/rank_indicator"
              android:gravity="center_horizontal"
              android:paddingEnd="@dimen/spacing_1x"
              android:paddingLeft="@dimen/spacing_1x"
              android:paddingRight="@dimen/spacing_1x"
              android:paddingStart="@dimen/spacing_1x"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              android:textColor="@color/white"/>
          </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:id="@+id/card3"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/spacing_quarter"
          android:layout_weight="1"
          android:tag="2"
          app:cardCornerRadius="@dimen/spacing_half">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
              android:id="@+id/image3"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:contentDescription="@string/app_name"
              android:scaleType="fitXY"
              android:src="@drawable/empty"/>

            <View
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_alignBottom="@+id/image3"
              android:background="@color/black_trans50"/>

            <TextView
              android:id="@+id/title3"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_alignBottom="@+id/image3"
              android:ellipsize="end"
              android:gravity="center"
              android:maxLines="2"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              android:textColor="@color/white"/>

            <TextView
              android:id="@+id/info3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignTop="@+id/image3"
              android:background="@drawable/rank_indicator"
              android:gravity="center_horizontal"
              android:paddingEnd="@dimen/spacing_1x"
              android:paddingLeft="@dimen/spacing_1x"
              android:paddingRight="@dimen/spacing_1x"
              android:paddingStart="@dimen/spacing_1x"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              android:textColor="@color/white"/>
          </RelativeLayout>
        </androidx.cardview.widget.CardView>

      </LinearLayout>

      <LinearLayout
        android:id="@+id/layer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_half"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
          android:id="@+id/card4"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/spacing_quarter"
          android:layout_weight="1"
          android:tag="3">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
              android:id="@+id/image4"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:contentDescription="@string/app_name"
              android:scaleType="fitXY"
              android:src="@drawable/empty"/>

            <View
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_alignBottom="@+id/image4"
              android:background="@color/black_trans50"/>

            <TextView
              android:id="@+id/title4"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_alignBottom="@+id/image4"
              android:ellipsize="end"
              android:gravity="center"
              android:maxLines="1"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              android:textColor="@color/white"/>

            <TextView
              android:id="@+id/info4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignTop="@+id/image4"
              android:background="@drawable/rank_indicator"
              android:gravity="center_horizontal"
              android:paddingEnd="@dimen/spacing_1x"
              android:paddingLeft="@dimen/spacing_1x"
              android:paddingRight="@dimen/spacing_1x"
              android:paddingStart="@dimen/spacing_1x"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              android:textColor="@color/white"/>
          </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:id="@+id/card5"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/spacing_quarter"
          android:layout_marginLeft="@dimen/spacing_quarter"
          android:layout_marginRight="@dimen/spacing_quarter"
          android:layout_marginStart="@dimen/spacing_quarter"
          android:layout_weight="1"
          android:tag="4">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
              android:id="@+id/image5"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:contentDescription="@string/app_name"
              android:scaleType="fitXY"
              android:src="@drawable/empty"/>

            <View
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_alignBottom="@+id/image5"
              android:background="@color/black_trans50"/>

            <TextView
              android:id="@+id/title5"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_alignBottom="@+id/image5"
              android:ellipsize="end"
              android:gravity="center"
              android:maxLines="1"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              android:textColor="@color/white"/>

            <TextView
              android:id="@+id/info5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignTop="@+id/image5"
              android:background="@drawable/rank_indicator"
              android:gravity="center_horizontal"
              android:paddingEnd="@dimen/spacing_1x"
              android:paddingLeft="@dimen/spacing_1x"
              android:paddingRight="@dimen/spacing_1x"
              android:paddingStart="@dimen/spacing_1x"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              android:textColor="@color/white"/>
          </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:id="@+id/card6"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/spacing_quarter"
          android:layout_weight="1"
          android:tag="5">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
              android:id="@+id/image6"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:contentDescription="@string/app_name"
              android:scaleType="fitXY"
              android:src="@drawable/empty"/>

            <View
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_alignBottom="@+id/image6"
              android:background="@color/black_trans50"/>

            <TextView
              android:id="@+id/title6"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_alignBottom="@+id/image6"
              android:ellipsize="end"
              android:gravity="center"
              android:maxLines="1"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              android:textColor="@color/white"/>

            <TextView
              android:id="@+id/info6"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignTop="@+id/image6"
              android:background="@drawable/rank_indicator"
              android:gravity="center_horizontal"
              android:paddingEnd="@dimen/spacing_1x"
              android:paddingLeft="@dimen/spacing_1x"
              android:paddingRight="@dimen/spacing_1x"
              android:paddingStart="@dimen/spacing_1x"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              android:textColor="@color/white"/>
          </RelativeLayout>
        </androidx.cardview.widget.CardView>
      </LinearLayout>

      <TextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_half"
        android:layout_marginTop="@dimen/spacing_1x"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_2x"
        android:paddingTop="@dimen/spacing_2x"
        android:text="@string/label_more"
        android:textColor="@color/colorAccent"/>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</RelativeLayout>

